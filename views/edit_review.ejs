    <%- include("partials/header.ejs") %>
    <div class="saf">
    <h3>edit review or rating</h3>
    
    <form class="sdf" action="/submit_review/<%= data.user_id %>/<%= data.book_id %>" method="POST">
        <label for="review">Review Text:</label>
        <textarea id="review" name="review" rows="15" cols="100" class="border border-gray-300 p-2 rounded"> <%= data.review %> </textarea>
        
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" value="<%= data.rating %>" class="border border-gray-300 p-2 rounded">
        
        <input type="submit" value="Submit" class="fr">
    </form>

</div>
